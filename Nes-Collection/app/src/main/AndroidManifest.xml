<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.bossdogsoftware.nes_collection">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.Search"
            android:label="@string/title_activity_search"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.Statistics"
            android:label="@string/title_activity_statistics"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.About"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.ShelfOrder"
            android:label="@string/title_activity_shelf_order"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.WishList"
            android:label="@string/title_activity_wish_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.GamesDetail"
            android:label="@string/title_activity_games_detail"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.FinishedGames"
            android:label="@string/title_activity_finished_games"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.StatsSearchResults"
            android:label="@string/title_activity_stats_search_results"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="uk.co.bossdogsoftware.nes_collection.activities.TrophyRoom"
            android:label="@string/title_activity_trophy_room"
            android:theme="@style/AppTheme" />
    </application>

</manifest>