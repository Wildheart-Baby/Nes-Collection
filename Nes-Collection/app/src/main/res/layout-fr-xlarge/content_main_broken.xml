<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.pixoveeware.nes_collection.MainActivity"

    android:background="#C0C0BB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainOwnedGames"
        android:id="@+id/lblOwnedGames"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnowned"
        android:layout_marginEnd="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="80dp"
        android:textSize="24sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAllGames"
        android:src="@drawable/btnowned"
        android:scaleType="fitCenter"
        android:background="@null"
        android:minHeight="175dp"
        android:minWidth="175dp"
        android:layout_marginStart="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnneeded"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/btnneededgames"
        android:minHeight="175dp"
        android:minWidth="175dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnAllGames"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btnowned"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnowned"
        android:background="@null"
        android:src="@drawable/btnownedgames"
        android:scaleType="fitCenter"
        android:minHeight="175dp"
        android:minWidth="175dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFavouriteGames"
        android:background="@null"
        android:src="@drawable/btnfavouritegames"
        android:scaleType="fitCenter"
        android:minHeight="175dp"
        android:minWidth="175dp"
        android:layout_marginStart="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lblAllGames" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnWishList"
        android:src="@drawable/btnwishlist"
        android:background="@null"
        app:layout_constraintRight_toLeftOf="@+id/btnShelfOrder"
        app:layout_constraintTop_toBottomOf="@+id/lblNeededGames"
        app:layout_constraintLeft_toRightOf="@+id/btnFavouriteGames"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:minHeight="175dp"
        android:minWidth="175dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStats"
        android:src="@drawable/btnstats"
        android:scaleType="fitCenter"
        android:background="@null"
        android:minHeight="175dp"
        android:minWidth="175dp"
        android:layout_marginStart="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lblFavouriteGames" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFinished"
        android:src="@drawable/btnfinishedgames"
        android:scaleType="fitCenter"
        android:background="@null"
        android:minHeight="175dp"
        android:minWidth="175dp"
        app:layout_constraintRight_toLeftOf="@+id/btnShelfOrder"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnStats"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lblWishList" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShelfOrder"
        android:background="@drawable/btnshelforder"
        android:minHeight="175dp"
        android:minWidth="175dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="72dp"
        app:layout_constraintHorizontal_bias="0.71"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lblOwnedGames" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSettings"
        android:background="@drawable/btnsettings"
        android:minHeight="175dp"
        android:minWidth="175dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lblShelfOrder"
        android:layout_marginEnd="72dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainAllGames"
        android:id="@+id/lblAllGames"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/btnAllGames"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:layout_marginStart="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainFavouriteGames"
        android:id="@+id/lblFavouriteGames"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFavouriteGames"
        android:layout_marginStart="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="112dp"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainStatistics"
        android:id="@+id/lblStats"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStats"
        android:layout_marginStart="105dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="105dp"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainNeededGames"
        android:id="@+id/lblNeededGames"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnneeded"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/lblAllGames"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/lblOwnedGames"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainWishList"
        android:id="@+id/lblWishList"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnWishList"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/lblFavouriteGames"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/lblShelfOrder"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.71" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainShelfOrder"
        android:id="@+id/lblShelfOrder"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnShelfOrder"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainFinishedGames"
        android:id="@+id/lblFinishedGames"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFinished"
        app:layout_constraintRight_toLeftOf="@+id/lblSettings"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/lblStats"
        android:layout_marginLeft="8dp"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainSettings"
        android:id="@+id/lblSettings"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:layout_marginEnd="105dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="105dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings" />


</android.support.constraint.ConstraintLayout>
