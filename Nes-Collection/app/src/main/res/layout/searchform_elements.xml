        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frmSearch"
        android:background="#000000">

        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
            android:background="#ffffff"
            android:layout_margin="1dp"
            android:padding="2dp">

           <!-- <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Search games"
                android:id="@+id/lblLabel"
                android:layout_alignRight="@+id/txtSearch"
                android:layout_alignEnd="@+id/txtSearch"
                android:textAlignment="center"
                android:textSize="16sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/lblLine"
                android:layout_alignBottom="@+id/lblLabel"
                android:layout_below="@+id/lblLabel"
