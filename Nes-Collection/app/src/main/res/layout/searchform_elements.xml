            <EditText
        android:id="@+id/txtSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

                android:ems="10"
        android:hint="Type your search here..."

                android:layout_alignLeft="@+id/field_name"
                android:layout_alignStart="@+id/field_name">

        <requestFocus />
    </EditText>

    <Spinner
        android:layout_width="180sp"
        android:layout_height="25sp"
        android:id="@+id/field_name"
        android:layout_below="@+id/txtSearch"
        android:layout_marginLeft="4dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/rgnOk"
        android:layout_below="@+id/field_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="4dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/rgnCancel"
        android:layout_below="@+id/field_name"
        android:layout_toRightOf="@+id/rgnOk"
        android:layout_toEndOf="@+id/rgnOk" />

</RelativeLayout>

    </FrameLayout>
