<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="#C0C0BB">

    <ImageView
        android:layout_width="225dp"
        android:layout_height="150dp"
        android:id="@+id/imgGameCover"
        android:scaleType="fitCenter"
        android:contentDescription="cover"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholdersml"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgOwned"
        android:src="@drawable/icon_owned3"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/imgGameCover"
        android:layout_alignRight="@+id/imgGameCover"
        android:layout_alignEnd="@+id/imgGameCover"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

</RelativeLayout>