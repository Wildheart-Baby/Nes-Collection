<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.bossdogsoftware.nes_collection.activities.Settings"
    tools:showIn="@layout/activity_settings"
    android:background="#CCCAC7">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




    <!--<com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_settings"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:foregroundGravity="center">
    </com.google.android.gms.ads.AdView>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsWhichregion"
        android:id="@+id/lblTitle"
        android:gravity="center"
        android:background="#CCCAC7"
        android:textColor="#000000"

        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropRegion"
        android:spinnerMode="dropdown"

        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/lblTitle"
        android:layout_toEndOf="@+id/lblTitle" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsUnlicensed"
        android:id="@+id/chkUnlicensed"
        android:layout_below="@+id/dropRegion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/lblDivider"
        android:layout_below="@+id/chkUnlicensed"
        android:layout_centerHorizontal="true"
        android:background="#777272"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp" />

        <CheckBox
            android:text="@string/RegionMissing"
            android:layout_below="@id/lblDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkRegionMissing"
            android:visibility="gone" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:text="New Text"
            android:id="@+id/lblDivider2"
            android:layout_below="@+id/chkRegionMissing"
            android:layout_centerHorizontal="true"
            android:background="#777272"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:visibility="gone" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsCurrency"
        android:id="@+id/lblCurrency"
        android:layout_below="@+id/lblDivider2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginRight="5dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropCurrency"
        android:layout_below="@+id/lblDivider2"
        android:layout_toRightOf="@+id/lblCurrency"
        android:layout_toEndOf="@+id/lblCurrency" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:text="New Text"
            android:id="@+id/lblDivider3"
            android:layout_below="@+id/lblCurrency"
            android:layout_centerHorizontal="true"
            android:background="#777272"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsShelfSize"
        android:id="@+id/lblShelfSize"
        android:layout_below="@+id/lblDivider3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtShelfSize"
        android:layout_alignTop="@+id/lblDivider3"
        android:layout_toRightOf="@+id/lblShelfSize"
        android:layout_toEndOf="@+id/lblShelfSize"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/lblDivider4"
        android:layout_below="@+id/lblShelfSize"
        android:layout_centerHorizontal="true"
        android:background="#777272"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsShowPrices"
        android:id="@+id/chkShowPrices"
        android:layout_below="@+id/lblDivider4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/lblDivider5"
        android:layout_below="@+id/chkShowPrices"
        android:layout_centerHorizontal="true"
        android:background="#777272"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsGamesList"
        android:layout_below="@+id/lblDivider5"
        android:id="@+id/lblListHeader"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignRight="@+id/rgLayout"
        android:layout_alignEnd="@+id/rgLayout" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_below="@+id/lblListHeader"
        android:id="@+id/rgLayout">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingsListView"
            android:id="@+id/rbListView" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingsGalleryView"
            android:id="@+id/rbGallery"
            android:layout_marginLeft="10dp" />
    </RadioGroup>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:text="New Text"
            android:id="@+id/lblDivider6"
            android:layout_below="@+id/rgLayout"
            android:layout_centerHorizontal="true"
            android:background="#777272"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingsTitlesType"
            android:layout_below="@+id/lblDivider6"
            android:id="@+id/lblTitlesHeader"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_alignRight="@+id/rgLayout"
            android:layout_alignEnd="@+id/rgLayout" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_below="@+id/lblTitlesHeader"
            android:id="@+id/rgTitles">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingsEuroTitles"
                android:id="@+id/rbTitles" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingsUsTitles"
                android:id="@+id/rbUStitles"
                android:layout_marginLeft="10dp" />
        </RadioGroup>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/lblDivider7"
        android:layout_below="@+id/rgTitles"
        android:layout_centerHorizontal="true"
        android:background="#777272"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsExportDatabase"
        android:id="@+id/textView3"
        android:layout_below="@+id/lblDivider7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsSettingsExport"
        android:id="@+id/btnExport"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsImport"
        android:id="@+id/btnImport"
        android:layout_alignTop="@+id/btnExport"
        android:layout_toRightOf="@+id/btnExport"
        android:layout_toEndOf="@+id/btnExport" />
    </RelativeLayout>
</ScrollView>
