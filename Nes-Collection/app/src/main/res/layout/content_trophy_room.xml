<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_trophy_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.bossdogsoftware.nes_collection.activities.TrophyRoom"
    tools:showIn="@layout/activity_trophy_room">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/podium"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgPodium"/>

    <TextView
        android:text="Most valuable games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lblTitle"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/placeholdersml"
        android:id="@+id/imgSilver"
        tools:ignore="ContentDescription"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/imgPodium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/placeholdersml"
        android:id="@+id/imgGold"
        tools:ignore="ContentDescription"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/imgSilver"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/placeholdersml"
        android:id="@+id/imgBronze"
        android:layout_marginTop="9dp"
        tools:ignore="ContentDescription"
        android:visibility="invisible"
        android:layout_alignTop="@+id/imgSilver"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
