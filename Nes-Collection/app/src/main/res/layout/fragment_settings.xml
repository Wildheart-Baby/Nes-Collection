<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#CCCAC7"
    tools:context=".Fragments.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--<com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id_settings"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:foregroundGravity="center">
        </com.google.android.gms.ads.AdView>-->

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"

            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="#CCCAC7"
            android:gravity="center"
            android:text="@string/settingsWhichregion"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/dropRegion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dropRegion" />

        <Spinner
            android:id="@+id/dropRegion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"

            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/lblTitle"
            android:layout_toRightOf="@+id/lblTitle"
            android:background="@drawable/spinner_bg"
            android:popupBackground="@drawable/bg_spinner_popup_window"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@+id/lblTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/chkUnlicensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dropRegion"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:text="@string/settingsUnlicensed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dropRegion" />

        <TextView
            android:id="@+id/lblDivider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#777272"
            android:text="New Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chkUnlicensed" />

        <TextView
            android:id="@+id/lblCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/settingsCurrency"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/dropCurrency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dropCurrency" />

        <Spinner
            android:id="@+id/dropCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/lblCurrency"
            android:layout_toRightOf="@+id/lblCurrency"
            app:layout_constraintStart_toEndOf="@+id/lblCurrency"
            app:layout_constraintTop_toBottomOf="@+id/lblDivider" />

        <TextView
            android:id="@+id/lblDivider3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lblCurrency"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#777272"
            android:text="New Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dropCurrency" />

        <TextView
            android:id="@+id/lblShelfSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDivider3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/settingsShelfSize"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/txtShelfSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtShelfSize" />

        <EditText
            android:id="@+id/txtShelfSize"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lblDivider3"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/lblShelfSize"
            android:layout_toRightOf="@+id/lblShelfSize"
            android:ems="10"
            android:hint="0"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/lblShelfSize"
            app:layout_constraintTop_toBottomOf="@+id/lblDivider3" />

        <TextView
            android:id="@+id/lblDivider4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#777272"
            android:text="New Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtShelfSize" />

        <CheckBox
            android:id="@+id/chkShowPrices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDivider4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:text="@string/settingsShowPrices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblDivider4" />

        <TextView
            android:id="@+id/lblDivider5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#777272"
            android:text="New Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chkShowPrices" />

        <TextView
            android:id="@+id/lblListHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDivider5"
            android:layout_alignEnd="@+id/rgLayout"
            android:layout_alignRight="@+id/rgLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/settingsGamesList"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/rgLayout"
            app:layout_constraintStart_toStartOf="@+id/rgLayout"
            app:layout_constraintTop_toBottomOf="@+id/lblDivider5" />

        <RadioGroup
            android:id="@+id/rgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblListHeader"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblListHeader">

            <RadioButton
                android:id="@+id/rbListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingsListView" />

            <RadioButton
                android:id="@+id/rbGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/settingsGalleryView" />
        </RadioGroup>

        <TextView
            android:id="@+id/lblDivider6"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rgLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#777272"
            android:text="New Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgLayout" />

        <TextView
            android:id="@+id/lblTitlesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDivider6"
            android:layout_alignEnd="@+id/rgLayout"
            android:layout_alignRight="@+id/rgLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/settingsTitlesType"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/rgTitles"
            app:layout_constraintStart_toStartOf="@+id/rgTitles"
            app:layout_constraintTop_toBottomOf="@+id/lblDivider6" />

        <RadioGroup
            android:id="@+id/rgTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblTitlesHeader"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTitlesHeader">

            <RadioButton
                android:id="@+id/rbTitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingsEuroTitles" />

            <RadioButton
                android:id="@+id/rbUStitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/settingsUsTitles" />
        </RadioGroup>

        <TextView
            android:id="@+id/lblDivider7"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rgTitles"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#777272"
            android:text="New Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgTitles" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDivider7"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:text="@string/settingsExportDatabase"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/btnImport"
            app:layout_constraintStart_toStartOf="@+id/btnExport"
            app:layout_constraintTop_toBottomOf="@+id/lblDivider7" />

        <Button
            android:id="@+id/btnExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:text="@string/settingsSettingsExport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/btnImport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnExport"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/btnExport"
            android:layout_toRightOf="@+id/btnExport"
            android:text="@string/settingsImport"
            app:layout_constraintStart_toEndOf="@+id/btnExport"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>