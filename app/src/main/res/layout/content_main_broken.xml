<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.pixoveeware.nes_collection.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#C0C0BB">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnAllGames"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/AllGames"
        android:background="@drawable/btnallgames"
        android:maxWidth="50dp"
        android:maxHeight="75dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnowned"
        android:layout_alignParentTop="true"
        android:minHeight="200dp"
        android:minWidth="150dp"

        android:background="@drawable/owned"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="25dp"
        android:layout_alignBottom="@+id/btnAllGames"
        android:layout_alignLeft="@+id/btnneeded"
        android:layout_alignStart="@+id/btnneeded"
        android:layout_alignRight="@+id/btnneeded"
        android:layout_alignEnd="@+id/btnneeded" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnneeded"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_alignTop="@+id/btnFavouriteGames"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btnneededgames"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginBottom="25dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnFavouriteGames"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_below="@+id/btnAllGames"
        android:layout_alignLeft="@+id/btnAllGames"
        android:layout_alignStart="@+id/btnAllGames"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btnfavouritegames" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnStats"
        android:layout_below="@+id/btnFavouriteGames"
        android:layout_alignLeft="@+id/btnFavouriteGames"
        android:layout_alignStart="@+id/btnFavouriteGames"
        android:background="@drawable/btnstats" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnSettings"
        android:layout_below="@+id/btnneeded"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btnsettings" />

</RelativeLayout>
