<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="3">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnAllGames"
        android:text="@string/AllGames"
        android:background="@drawable/btnallgames"
        android:adjustViewBounds="true"
        android:layout_row="0"
        android:layout_column="0"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnneeded"
        android:background="@drawable/btnneededgames"
        android:layout_row="0"
        android:layout_column="1"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnowned"
        android:background="@drawable/owned"
        android:layout_row="0"
        android:layout_column="2"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFavouriteGames"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@drawable/btnfavouritegames"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnWishList"
        android:layout_marginRight="15dp"
        android:layout_row="1"
        android:layout_column="1" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnShelfOrder"
        android:layout_row="1"
        android:layout_column="2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStats"
        android:background="@drawable/btnstats"
        android:layout_marginTop="25dp"
        android:layout_row="2"
        android:layout_column="0" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btnFinished"
        android:layout_marginRight="15dp"
        android:layout_row="2"
        android:layout_column="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSettings"
        android:background="@drawable/btnsettings"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_row="2"
        android:layout_column="2" />
</GridLayout>